{
  "name": "simplemorphic",
  "version": "0.0.1",
  "scripts": {
    "dev": "concurrently --kill-others \"better-npm-run start-dev\"",
    "dev2": "concurrently --kill-others \"better-npm-run watch-client\" \"better-npm-run start-dev\""
  },
  "betterScripts": {
    "start-dev": {
      "command": "nodemon ./ssr/server/index.js --exec babel-node",
      "env": {
        "NODE_PATH": "./ssr",
        "NODE_ENV": "development",
        "PORT": 3000
      }
    },
    "watch-client": {
      "command": "babel ./webpack/webpack-dev-server.js",
      "env": {
        "UV_THREADPOOL_SIZE": 100,
        "PORT": 3000
      }
    }
  },
  "dependencies": {
    "cookies": "^0.7.1",
    "errorhandler": "^1.5.0",
    "express": "^4.16.2",
    "history": "^4.7.2",
    "path": "^0.12.7",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-redux": "^5.0.7",
    "react-router": "^4.2.0",
    "react-router-config": "^1.0.0-beta.4",
    "redux": "^3.7.2",
    "redux-cookies": "^1.0.1",
    "webpack-isomorphic-tools": "^3.0.5"
  },
  "devDependencies": {
    "@types/node": "^9.4.6",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.3",
    "babel-plugin-transform-react-jsx": "^6.24.1",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-runtime": "^6.26.0",
    "better-npm-run": "^0.1.0",
    "concurrently": "^3.5.1",
    "nodemon": "^1.17.1",
    "webpack": "^4.0.1"
  }
}
